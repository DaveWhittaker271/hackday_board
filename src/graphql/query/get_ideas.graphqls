type get_ideas_response {
  ideas: [idea]
}

type idea {
  id: Int!
  user_id: Int!
  project_id: Int!
  title: String!
  description: String
  comments: [Comment]
  user_name: String
  user_image: String
  picture_url: String
  files: [String!]
  timecreated: Int
}

type Comment {
  id: Int
  user_id: Int
  idea_id: Int
  name: String
  user_image: String
  text: String
  timecreated: String
}

extend type Query {
  get_ideas(
    project_id: Int!
  ): get_ideas_response
}